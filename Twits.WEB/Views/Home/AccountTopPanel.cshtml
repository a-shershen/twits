<div class="col-xs-12 col-sm-2">
    @Html.ActionLink("TWITS!", "Index", "Home", null, new { @class = "white logo" })    
</div>


    @if (@User.Identity.IsAuthenticated)
    {
        @*<div class="col-xs-3">
                @Html.ActionLink("Редактировать", "Edit", "User")
            </div>*@

            <div class="col-xs-12 col-sm-10 textRight" style="padding-top:6px;">
                <div class="col-xs-12">
                    <a href="/User/UserInfo?user=@User.Identity.Name" class="white">
                        @{string avapath = "/Images/Avatars/av" + User.Identity.Name + ".png"; }
                        <img src="@avapath" class="smallImage" />

                        <span>
                            @User.Identity.Name
                        </span>
                    </a>
                    |
                    <span>
                        @Html.ActionLink("Редактировать", "Edit", "User", null, new { @class = "white" })
                    </span>
                    |
                    <span>
                        @Html.ActionLink("Выйти!", "Logout", "Account", null, new { @class = "white" })
                    </span>
                </div>
            </div>

    }
    else
    {
        <div class="col-xs-12 col-sm-10 textRight" style="padding-top:6px;">
            @Html.ActionLink("Войти!", "Login", "Account", null, new { @class = "white" })
            |
            @Html.ActionLink("Зарегистрируйся!", "Register", "Account", null, new { @class = "white" })
        </div>
    }




