@model IEnumerable<Twits.WEB.Models.SubscriptionUser>

@if (Model == null)
{
    <div class="col-xs-12">
        Никто не подписан
    </div>
}

else
{
    if (Model.Count() == 0)
    {
        <div class="col-xs-12">
            Никто не подписан
        </div>
    }

    else
    {
        foreach (var str in Model)
        {
            <div class="col-xs-12 bold messageDiv">
                @{
                    string path = "/Images/Avatars/av" + str + ".png";
                }

                <img src="@path" class="xsmallImage" />

                @Html.ActionLink(@str, "UserInfo", "User", new { user = @str }, null)
            </div>
        }
    }
}

