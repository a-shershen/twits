@model IEnumerable<Twits.WEB.Models.UserMessage>

@if(Model == null)
{
    @: Нет сообщений
}
else
{
    if(Model.Count()==0)
    {
        @: Нет сообщений
    }

    else
    {
        foreach(var mes in Model)
        {
            @Html.ActionLink(@mes.Login, "UserInfo", "User", new { user = @mes.Login }, null)


            <br />
            @mes.DateTime
            <br />
            @mes.Text
            <br />
            <br />
        }
    }
}
